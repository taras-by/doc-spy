{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}

    {{ form_start(loginForm, {'attr': {'class': 'form-login'}}) }}

        {% include 'parts/flash.html.twig' %}

        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

        {{ form_label(loginForm.email) }}
        {{ form_widget(loginForm.email) }}

        {{ form_label(loginForm.password) }}
        {{ form_widget(loginForm.password) }}

        {{ form_row(loginForm.remember_me) }}

        <button class="btn btn-lg btn-primary btn-block mb-3" type="submit">
            Sign in
        </button>
        <div class="text-center">
            - OR -
        </div>
        <div class="text-center">
            <a href="{{ path('reset_password') }}">Reset password</a>
        </div>
    {{ form_end(loginForm) }}

{% endblock %}

{% block stylesheets %}

    <style>
        body {
            background-color: #f5f5f5;
        }

        .form-login {
            width: 100%;
            max-width: 330px;
            padding: 15px;
            margin: auto;
            margin-top: 50px;
        }

        .form-login .checkbox {
            font-weight: 400;
        }

        .form-login .form-control {
            position: relative;
            box-sizing: border-box;
            height: auto;
            padding: 10px;
            font-size: 16px;
        }

        .form-login .form-control:focus {
            z-index: 2;
        }

        .form-login input[type="email"] {
            margin-bottom: -1px;
            border-bottom-right-radius: 0;
            border-bottom-left-radius: 0;
        }

        .form-login input[type="password"] {
            margin-bottom: 10px;
            border-top-left-radius: 0;
            border-top-right-radius: 0;
        }

        .form-login input[type="checkbox"] {
            margin-top: .3rem;
            margin-left: 0;
        }

    </style>

{% endblock %}