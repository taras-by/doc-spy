{% extends 'base.html.twig' %}

{% block title %}Sources{% endblock %}

{% block body %}

    <div class="container">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th></th>
                        <th>Name</th>
                        <th>Visibility</th>
                        <th>Updated at</th>
                        <th>Schedule at</th>
                        <th>Update interval</th>
                        <th>Error count</th>
                    </tr>
                </thead>
                <tbody>
                {% for source in sources %}
                    <tr{% if source.errorCount >= 5 %} class="bg-danger"{% endif %}>
                        <td>{{ source.id }}</td>
                        <td><a href="{{ path('source_index', {'id' : source.id} ) }}"><img src="{{ source.icon }}" width="16" height="16" /></a></td>
                        <td><a href="{{ source.url }}" target="_blank">{{ source.name }}</a></td>
                        <td{% if source.createdBy %} title="{{ source.createdBy.name }}"{% endif %}>{{ source.visibility }}</td>
                        <td>{{ source.updatedAt ? source.updatedAt|date('Y-m-d H:i:s') : '-'}}</td>
                        <td>{{ source.scheduleAt ? source.scheduleAt|date('Y-m-d H:i:s') : '-' }}</td>
                        <td class="text-right">{{ source.updateInterval }}</td>
                        <td class="text-right">{{ source.errorCount }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
