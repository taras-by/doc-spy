{% if maxPages > 1 %}
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center mt-2 mb-4">
            <li class="page-item{{ thisPage == 1 ? ' disabled' }}">
                <a class="page-link" href="{{ path(route, {page: thisPage-1 < 1 ? 1 : thisPage-1}|merge(query)) }}" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            {% if view_first %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, {page: 1}|merge(query)) }}">1</a>
                </li>
            {% endif %}
            {% if view_left_dots %}
                <li class="page-item disabled">
                    <a class="page-link" href="#">...</a>
                </li>
            {% endif %}
            {% for i in start..end %}
                <li class="page-item{{ thisPage == i ? ' active' }}">
                    <a class="page-link" href="{{ path(route, {page: i}|merge(query)) }}">{{ i }}</a>
                </li>
            {% endfor %}
            {% if view_right_dots %}
                <li class="page-item disabled">
                    <a class="page-link" href="#">...</a>
                </li>
            {% endif %}
            {% if view_last %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, {page: maxPages}|merge(query)) }}">{{ maxPages }}</a>
                </li>
            {% endif %}
            <li class="page-item{{ thisPage == maxPages ? ' disabled' }}">
                <a class="page-link" href="{{ path(route, {page: thisPage+1 <= maxPages ? thisPage+1 : thisPage}|merge(query)) }}" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </nav>
{% endif %}
