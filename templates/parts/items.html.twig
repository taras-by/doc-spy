{% for item in items %}
    <div class="row item">
        <div class="col-md-2">
            {% if (date is not defined) or (date is defined and item.publishedAt|date() != date|date()) %}
                <div class="item-date">
                    {{ item.publishedAt|date() }}
                </div>
            {% endif %}
        </div>
        <div class="col-md-10 item-title">
            {% if item.source.icon %}
                <a href="{{ path('source_items', {'id' : item.source.id} ) }}">
                    <img src="{{ item.source.icon }}" width="16" height="16" />
                </a>
            {% endif %}
            <a  class="item-link" href="{{ item.link }}" target="_blank">{% include 'parts/event_time.html.twig' %}{{ item.title }}</a>
        </div>
    </div>
    {% set date = item.publishedAt %}
{% else %}
        <div class="alert alert-secondary" >
            No Items found
        </div>
{% endfor %}
