{% extends 'base.html.twig' %}

{% block title %}Subscriptions{% endblock %}

{% block body %}

    <div class="container">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>#</th>
                    <th ></th>
                    <th>Name</th>
                    <th>Visibility</th>
                    <th>Expire at</th>
                    <th>Notify</th>
                </tr>
                </thead>
                <tbody>
                {% for subscription in subscriptions %}
                    <tr>
                        <td>{{ subscription.source.id }}</td>
                        <td><a href="{{ path('source_items', {'id' : subscription.source.id} ) }}"><img src="{{ subscription.source.icon }}" width="16" height="16" /></a></td>
                        <td><a href="{{ subscription.source.url }}" target="_blank">{{ subscription.source.name }}</a></td>
                        <td{% if subscription.source.createdBy %} title="{{ subscription.source.createdBy.name }}"{% endif %}>{{ subscription.source.visibility }}</td>
                        <td>{{ subscription.expireAt ? subscription.expireAt|date('Y-m-d H:i:s') : '-' }}</td>
                        <td>{{ subscription.isNotify ? 'Yes' : 'No' }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
