{% extends 'mail.html.twig' %}

{% block body %}
    <p>New items for <b>{{ source.name }}</b> added:</p>
    {% for item in items %}
        <p><a  class="item-link" href="{{ item.link }}" target="_blank">{{ item.title }}</a></p>
    {% endfor %}
    {% if subscription.expireAt %}
        <p>Subscription expires: {{ subscription.expireAt|date() }}</p>
    {% endif %}
{% endblock %}
